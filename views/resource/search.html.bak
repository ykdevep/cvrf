{{extend 'layout.html'}}

{{loader = DIV(DIV(DIV(IMG(_src=URL("static","img/loader.gif"), _width="30%"), _class="col-md-5 col-md-offset-5"), _class="row"), _class="container")}}

{{=LOAD("resource", "search_component.load", args=request.args, vars=request.vars, ajax=True, content=loader, user_signature=True)}}

{{block header}}
{{super}}
    <style>

        #sugerencias {
            position: fixed;
            z-index: 1030;
            width: 48%;
        }
        #sugerencias {
            background: #ddd;
            border: 1px solid #ddd;
            box-shadow: 0 2px 5px 0 rgba(0,0,0,.16), 0 2px 10px 0 rgba(0,0,0,.12);
        }
        #sugerencias > li {
             text-align: left;
        }

        .figure-text > .fig-caption-text, .figure-text > img{
            margin-top: 4px;
            text-align: center;
        }

        .btn-group > a {
            margin: 0px;
        }

        .thumbnail {
            border: none;
        }

        .float-right {
            position: relative;
            float: right;
            margin: 0px;
        }

        .padding-list {
            padding-left: 10px;
        }

        .menu-active {
            background-color: #eee;
        }

        .cvrf_search {
            text-align: right;
            background-color: #f2f2f2;
            padding-top: 10px;
            padding: 5px;
        }

        .panel {
             box-shadow: 0 2px 5px 0 rgba(0,0,0,.16), 0 2px 10px 0 rgba(0,0,0,.12);
        }

        .figure-text > img {
            border: 1px solid #ddd;
            box-shadow: 0 2px 5px 0 rgba(0,0,0,.16), 0 2px 10px 0 rgba(0,0,0,.12);
        }

        .panel-header-line {
            border-top: 1px solid #ddd;
            border-color: #ddd
        }

        .panel-body {
             padding: 0px;
        }

        .container-search {
             padding-top: 25px;
        }

        .card-search {
            padding: 5px;
            margin: 5px;
        }

    </style>
{{end}}
