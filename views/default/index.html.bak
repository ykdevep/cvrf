{{block page_js}}
    {{super}}
    <script>
        $(function(){
            // obtiene información en formato JSON desde el servidor
                $.getJSON("{{=URL('resource', 'get_informations', hmac_key=KEY)}}", {}, function(json) {
                    if (json.resources){
                        $("#resources").text(json.resources);
                    }
                    if (json.users){
                        $("#users").text(json.users);
                    }
                    if (json.downloads){
                        $("#downloads").text(json.downloads);
                    }
                });
            /*Función que permite actualizar la cantidad recursos, descargas y usuarios totales de la aplicación cada 5 segundos*/
            setInterval(function(){
                $.getJSON("{{=URL('resource', 'get_informations', hmac_key=KEY)}}", {}, function(json) {
                    if (json.resources){
                        $("#resources").text(json.resources);
                    }
                    if (json.users){
                        $("#users").text(json.users);
                    }
                    if (json.downloads){
                        $("#downloads").text(json.downloads);
                    }
                });
            }, 5000);
        });
    </script>
{{end}}
