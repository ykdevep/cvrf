; App configuration
[app]
name        = Bienvenido a la Comunidad Virtual de Recursos Forestales
author      = Ing. Yasmany Santalla Pereda <ysantalla@upr.edu.cu>
description = La comunidad virtual de recursos forestales es un espacio virtual para compartir información científica del sector forestal en todas sus diversas formas.
keywords    = Comunidad, recursos, virtual, forestal, OAI-PMH
generator   = Web2py Web Framework

; db configuration
[db]
uri       = sqlite://storage.sqlite1
uri_task       = sqlite://storage.sqlite_task
;uri       = mysql://root:cvrforestales.14@localhost/cvrf_v2
;uri_task   = mysql://root:cvrforestales.14@localhost/scheduler_cvrf_v2
migrate   = true
pool_size = 10

; smtp address and credentials
[smtp]
server = correo.upr.edu.cu:587
sender = cvforestal@upr.edu.cu
login  = cvforestal:16.CVFOR
tls    = 1

; AD configuration
[ad]
server = ad.upr.edu.cu
base_dn = ou=_Usuarios,dc=upr,dc=edu,dc=cu

; form styling
[forms]
formstyle = bootstrap3_inline
separator =

; Host configuration
[host]
names = localhost:*, 127.0.0.1:*, *:*, *
